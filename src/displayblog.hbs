---
layout: layouts/default.hbs
title: "Blog Posts"
pagination:
  data: newblog
  size: 1
  alias: "blogs"
---

<div class="container my-5">
  <ol id="blog-posts" class="list-group mb-3">
    {{#each pagination.items}}
      <li class="list-group-item">
        <h5 class="mb-1">{{title}}</h5>

        {{#if content}}
          <div>{{{content}}}</div> <!-- Render processed Markdown content as HTML -->
        {{/if}}
      </li>
    {{/each}}
  </ol>

  <!-- Pagination Controls -->
  <nav aria-label="Page navigation">
    <ul id="pagination" class="pagination justify-content-center">
      {{#if pagination.href.previous}}
        <li class="page-item">
          <a class="page-link" href="{{pagination.href.previous}}" aria-label="Previous">
            <span aria-hidden="true">&laquo; Previous</span>
          </a>
        </li>
      {{/if}}

      {{#if pagination.href.next}}
        <li class="page-item">
          <a class="page-link" href="{{pagination.href.next}}" aria-label="Next">
            <span aria-hidden="true">Next &raquo;</span>
          </a>
        </li>
      {{/if}}
    </ul>
  </nav>
</div>
